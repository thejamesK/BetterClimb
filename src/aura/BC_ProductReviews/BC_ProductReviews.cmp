<aura:component description="BC_ProductReviews" controller="BC_ProductReviews">
    <aura:attribute name="product" type="BC_ProductWrapper" />
    <aura:attribute name="productReviews" type="ProductReview__c[]" access="private" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:handler name="change" value="{!v.product}" action="{!c.doInit}"/>

    <aura:method name="refresh" action="{!c.doInit}" description="Refresh the list of reviews" />

    <ui:scrollerWrapper class="slds-feed">
        <ul class="slds-feed__list">
            <aura:iteration items="{!v.productReviews}" var="productReview">
                <li class="slds-feed__item">
                    <article class="slds-post">
                        <header class="slds-post__header slds-media">
                            <div class="slds-media__figure">
                                <a href="javascript:void(0);" class="slds-avatar slds-avatar_circle">
                                    <img alt="{!productReview.CreatedBy.Name}" src="{!productReview.CreatedBy.SmallPhotoUrl}" title="{!productReview.CreatedBy.Name}" />
                                </a>
                            </div>
                            <div class="slds-media__body">
                                <div>
                                    <p>
                                        <a href="javascript:void(0);" title="{!productReview.CreatedBy.Name}" data-userid="{!productReview.CreatedBy.Id}" onclick="{!c.onUserInfoClick}">{!productReview.CreatedBy.Name}</a>
                                    </p>
                                    <p>
                                        <lightning:formattedDateTime value="{!productReview.CreatedDate}" />&nbsp;
                                        <lightning:formattedDateTime value="{!productReview.CreatedDate}" hour="numeric" minute="numeric" second="numeric"/>
                                    </p>
                                </div>
                            </div>
                        </header>
                        <div class="slds-post__content slds-text-longform">
                            <p style="font-size: 20px; font-weight: bold;">{!productReview.Name}</p>
                            <lightning:formattedRichText value="{!productReview.Comment__c}"/>
                            <div style="display: flex;">
                                <div style="padding-right: 5px; font-size: 19px;">
                                        {!productReview.Rating__c}
                                </div>
                                <div>
                                    <c:BC_StarRating value="{!productReview.Rating__c}" readonly="true" />
                                </div>
                            </div>
                        </div>
                    </article>
                </li>
            </aura:iteration>
        </ul>

        <aura:if isTrue="{!v.productReviews.length==0}">
            <div class="slds-align_absolute-center">
                {!$Label.c.BC_NoReviewsAvailable}
            </div>
        </aura:if>
    </ui:scrollerWrapper>
</aura:component>